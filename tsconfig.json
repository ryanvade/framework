{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
          "console/*": [
            "app/console/*"
          ],
          "controllers/*": [
            "app/controllers/*"
          ],
          "kernel/*": [
            "app/kernel/*"
          ],
          "routes/*": [
            "app/routes/*"
          ],
          "services/*": [
            "app/services/*"
          ],
          "models/*": [
            "app/models/*"
          ],
            "*": [
                "node_modules/*",
                "app/types/*"
            ]
        }
    },
    "include": [
        "app/**/*"
    ],
    "lib": ["es6"],
    "types": ["reflect-metadata"],
}
